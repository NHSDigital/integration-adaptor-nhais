{
  "_description": "This template tags and pushes an nhais image.",
  "variables": {
    "registry": "{{env `DOCKER_REGISTRY`}}",
    "repository": "/nhais",
    "tag": "{{env `BUILD_TAG`}}"
  },
  "builders": [
    {
      "type": "docker",
      "image": "local/nhais:{{user `tag`}}",
      "pull": false,
      "commit": true
    }
  ],
  "provisioners": [],
  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "{{user `registry`}}{{user `repository`}}",
        "tag": "{{user `tag`}}"
      },
      {
        "type": "docker-push",
        "ecr_login": true,
        "login_server": "https://{{user `registry`}}{{user `repository`}}"
      }
    ]
  ]
}
